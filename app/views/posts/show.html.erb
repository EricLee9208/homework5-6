<h1 class="p-3" style="margin-top:10vh;"> <%=@post.title%></h1>
<p class = "p-3"><%=@post.body%></p>
<small class="p-3" style="font-size:12.5px">Created <%= time_ago_in_words(@post.created_at)%> ago</small>
<div class="d-flex p-3">
  <%= button_to 'Edit', edit_post_path(@post), method: :get, class: "btn btn-outline-primary", style: "margin-right:5px;" %>
  <%= button_to 'Delete', post_path(@post), method: :delete, class: "btn btn-outline-primary", form: {data: {turbo_confirm: "Are you sure?"}} %>
</div>
<% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.full_messages.each do |msg| %>
      <li> <%= msg %></li>
    <% end %>
  </ul>
<% end %>
<div class="p-3">
  <%=form_with(model: [@post, @comment]) do |f| %>
    <div>
      <span style="font-size:25px;"><%= f.label :body, "Comment"%></span>
      <br>
      <%= f.text_area :body, rows: 5, :placeholder => " What's on your mind?", style: "width: 100%" %>
    </div>
    <%= f.submit "Submit", class: "btn btn-outline-primary"%>
  <% end %>
</div>
<% @comments.each do |comment| %>
  <div class="p-3 d-flex flex-column" style="flex-wrap: wrap;">
    <p> <%= comment.body %></p>
    <p style="font-size: 12.5px;">
      Commented <%= time_ago_in_words(comment.created_at)%> ago â€¢
      <%= link_to "Delete", post_comment_path(@post.id,comment.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, style: "text-decoration: none" %>
    </p>
  </div>
<% end %>
