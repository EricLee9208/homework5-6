<div class="d-flex flex-wrap justify-content-center" style="max-width:100vw; margin-top: 10vh;" >
  <% @posts.each do |post| %>
    <div class="flex-column card justify-content-center"  style="max-width:31.5vw; min-width: 450px; margin:10px; height:16vh;">
      <h5 class="card-title" style = "margin:10px"> <%= link_to post.title, post_path(post), style: "text-decoration:none"%> </h5>
      <p class="card-text" style="margin-left:10px; margin-right:10px; margin-bottom:10px; overflow: hidden; text-overflow: ellipsis;
white-space: nowrap;" >
        <%= post.body%>
      </p>
    </div>
  <% end %>
</div>
